<%= render 'shared/errors', object: @question %>
<div class="container">
  <%= form_with model: @question do |f| %>
    <div class="mb-3 mt-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3 mt-3">
      <%= f.label :body, class: 'form-label' %>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="mb-3 mt-3">
      <%= f.label :tags, class: 'form-label' %>
      <%= f.collection_select :tag_ids, tags, :id, :title, {},
                              multiple: true, class: 'form-control',
                              class: 'js-multiple-select w-100' %>
    </div>


    <%= f.submit (@question.new_record? ? t('question_form.create') : t('question_form.edit')), class: 'btn btn-primary'%>
  <% end %>
</div>