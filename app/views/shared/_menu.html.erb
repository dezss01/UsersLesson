<%#= content_for :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
            <%= nav_tab "Main page", root_path, class: "nav-link px-2" %>
          </li>
        </ul>
        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= nav_tab current_user.name_or_email, '#',
                          class: 'nav-link px-2 dropdown-toggle',
                          data: {"bs-toggle": 'dropdown'}
              %>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Edit', edit_user_path(current_user), class: 'dropdown-item' %>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to 'Log out', session_path, data: { turbo_method: :delete}, class: 'dropdown-item'%>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= nav_tab 'Sign Up', new_user_path, class: 'nav-link px-2' %>
            </li>
            <li>
              <%= nav_tab 'Log In', new_session_path, class: 'nav-link px-2' %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<%# end %>