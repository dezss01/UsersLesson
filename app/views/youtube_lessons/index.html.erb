<%= provide :page_title, 'Youtube Lessons' %>
<%= currently_at t('menu.lessons') %>
<div class="container">
  <div class="mt-3">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Link</th>
    </tr>
    </thead>
    <tbody>
    <% @youtube_lessons.each do |lesson| %>
      <tr>
        <th scope="row"><%= lesson.number %></th>
        <td><%= lesson.name %></td>
        <td><%= lesson.description %></td>
        <td><%= link_to 'Link', lesson.link %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="mt-3">
    <%== pagy_bootstrap_nav @pagy %>
  </div>
</div>